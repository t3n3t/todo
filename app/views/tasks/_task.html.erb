<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="inline-block mb-1">Name: </strong>
    <%= task.name %>
    <br />
    <strong class="inline-block mb-1">Contents: </strong>
    <%= task.body %>
    <br />
    <strong class="inline-block mb-1">Date: </strong>
    <%= task.created_at.strftime("%d-%m-%Y") %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this task", task, class: "btn-secondary" %>
    <%= link_to 'Edit this task', edit_task_path(task), class: "btn-secondary" %>
    <%= link_to 'Destroy this task', task_path(task), class: 'btn-danger', data: {
                  turbo_method: :delete,
                  turbo_confirm: 'Are you sure?'
                } %>
    <hr class="mt-6">
  <% end %>
</div>
